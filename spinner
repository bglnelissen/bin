stepsize=12; frames=' \ ğŸ¾      | \ğŸ¾        |  | ğŸ¾      |  |  ğŸ¾     |  |   ğŸ¾    |  |    ğŸ¾   |  |     ğŸ¾  |  |      ğŸ¾ /  |        ğŸ¾/ |      ğŸ¾ |  |     ğŸ¾  |  |    ğŸ¾   |  |   ğŸ¾    |  |  ğŸ¾     | '
# stepsize=10; frames='\ o-----|  |-o----|  |--o---|  |---o--|  |----o-/  |-----o / |----o-|  |---o--|  |--o---|  \-o----| '
# stepsize=1; frames='â›”ï¸  '

# the loop
while true; do
	s=$(( (s+$stepsize) %${#frames} )); 
	printf "\r${frames:$s:$stepsize}"
	sleep 0.2
done